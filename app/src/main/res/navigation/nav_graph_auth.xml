<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_auth"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="io.moxd.shopforme.ui.login.LoginFragment"
        android:label="Einloggen"
        tools:layout="@layout/auth_login_fragment">
        <action
            android:id="@+id/action_register"
            app:destination="@id/registrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="io.moxd.shopforme.ui.registration.RegistrationFragment"
        android:label="Registrieren"
        tools:layout="@layout/auth_registration_fragment" />
</navigation>