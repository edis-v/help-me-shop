<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:transitionName="shopdetail"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/max_shop_cardview_exit"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:src="@drawable/ic_wrong"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black" />

        <TextView

            android:id="@+id/max_shop_cardview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Einkauf vom 22.78.68"
            android:textColor="@color/black"

            android:textSize="24dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toRightOf="@id/max_shop_cardview_exit"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/max_shop_cardview_anzahl"

            android:layout_width="wrap_content"
            android:textSize="20dp"

            android:layout_height="wrap_content"

            android:text="Items 22"
            android:layout_marginBottom="10dp"

            app:layout_constraintLeft_toRightOf="@id/max_shop_cardview_exit"
            app:layout_constraintTop_toBottomOf="@id/max_shop_cardview_title"
            />
        <TextView
            android:id="@+id/max_shop_cardview_Preis"

            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/max_shop_cardview_anzahl"
            app:layout_constraintTop_toBottomOf="@id/max_shop_cardview_title"

            android:text="Preis: 22€"
            />
        <TextView
            android:id="@+id/max_shop_cardview_bezahlt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Bezahlt am 22.7.99"

            app:layout_constraintLeft_toRightOf="@id/max_shop_cardview_exit"
            app:layout_constraintTop_toBottomOf="@id/max_shop_cardview_anzahl"
            />
        <ImageView
            android:id="@+id/max_shop_cardview_status"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_done"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/max_shop_cardview_Preis"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            app:tint="@color/green_200" />

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/max_shop_cardview_menu_buylist"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintHeight_max="300dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toRightOf="@id/max_shop_cardview_exit"
            app:layout_constraintTop_toBottomOf="@id/max_shop_cardview_status"
            />



        <LinearLayout
            app:layout_constraintLeft_toRightOf="@id/max_shop_cardview_exit"
            app:layout_constraintTop_toBottomOf="@id/max_shop_cardview_menu_buylist"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:id="@+id/max_shop_cardview_menu_options1"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/max_shop_cardview_menu_delete"
                style="?attr/materialButtonOutlinedStyle"
                android:text="Löschen"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/red"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"

                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/max_shop_cardview_menu_shop"
                style="?attr/materialButtonOutlinedStyle"
                android:text="Fertig"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/green_200"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"

                />

        </LinearLayout>
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/max_shop_cardview_exit"
            app:layout_constraintTop_toBottomOf="@id/max_shop_cardview_menu_options1"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/max_shop_cardview_menu_report"
                style="?attr/materialButtonOutlinedStyle"
                android:text="Report"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/mapbox_blue"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"

                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/max_shop_cardview_menu_payed"
                style="?attr/materialButtonOutlinedStyle"
                android:text="Bezahlt"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/mapbox_blue"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"

                />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>