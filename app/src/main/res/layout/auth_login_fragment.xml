<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondaryLight"
    tools:context=".ui.login.LoginFragment"
    android:elevation="0dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="151dp"
        android:layout_height="168dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:contentDescription="TODO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo102"
        android:textAllCaps="true"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="128dp" />

    <TextView
        android:id="@+id/login_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.Shrine.Title"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
            android:textAppearance="@style/TextAppearance.ShopForMe.Subtitle1"
            android:layout_gravity="center_horizontal"
            android:id="@+id/login_txt_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_txt_title"/>

        <com.google.android.material.textfield.TextInputLayout
            android:textAppearance="@style/TextAppearance.ShopForMe.Subtitle2"
            style ="@style/Widget.ShopForMe.TextInputLayout"
            android:id="@+id/login_txt_input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="@string/hint_email"
            app:hintTextColor="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_txt_subtitle"
            app:errorEnabled="true"
            >


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
            />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style ="@style/Widget.ShopForMe.TextInputLayout"
            android:id="@+id/login_txt_input_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_password"
            app:hintTextColor="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_txt_input_email"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textAppearance="@style/TextAppearance.ShopForMe.Subtitle2"
                />

        </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginBtn"
        style="@style/Widget.ShopForMe.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="16dp"
        android:layout_margin="5dp"
        android:paddingVertical="15sp"
        android:text="@string/action_login"
        android:textAppearance="@style/TextAppearance.ShopForMe.Button"
        app:layout_constraintEnd_toEndOf="@+id/login_txt_input_pw"
        app:layout_constraintTop_toBottomOf="@+id/login_txt_input_pw" />



        <TextView
            android:id="@+id/login_txt_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/action_register"
            android:textAppearance="@style/TextAppearance.ShopForMe.Subtitle2"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/login_txt_input_pw"
            app:layout_constraintTop_toBottomOf="@+id/login_txt_input_pw"/>

        <TextView
            android:id="@+id/login_txt_forgot_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_txt_register"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:text="@string/action_forgot_pw"
            android:textAppearance="@style/TextAppearance.ShopForMe.Subtitle2"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/login_txt_register"
            app:layout_constraintTop_toBottomOf="@+id/login_txt_register"/>

    <TextView
        android:id="@+id/login_txt_show_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="12dp"
        android:text="@string/action_show_guide"
        android:textAppearance="@style/TextAppearance.ShopForMe.Subtitle2"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginBtn" />


</androidx.constraintlayout.widget.ConstraintLayout>
