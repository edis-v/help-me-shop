<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/map_View"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <!--      mapbox:mapbox_cameraZoom="10"
          mapbox:mapbox_cameraBearing="34.33"
          mapbox:mapbox_cameraTilt="50.25"
          mapbox:mapbox_cameraZoomMax="10"
          mapbox:mapbox_cameraZoomMin="5"
          mapbox:mapbox_uiRotateGestures="false" -->


    <com.google.android.material.slider.Slider
        android:id="@+id/slider_km"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/map_maxlocations"
        android:layout_alignParentRight="true"

        android:layout_marginEnd="20dp"

        android:valueFrom="1"
        android:valueTo="100" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_on_top_of_map"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/map_maxlocations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rv_on_top_of_map"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:paddingEnd="20dp"
        android:textAppearance="@style/TextAppearance.ShopForMe.Subtitle2"
        android:textStyle="bold" />
</RelativeLayout>