<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/shopangebot_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        android:elevation="0dp"
        >
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Angebote"


            />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Shoppen"

            />
    </com.google.android.material.tabs.TabLayout>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:layout_width="match_parent"
    android:layout_below="@id/shopangebot_tab"
    android:id="@+id/shopangebot_Refresh"
    android:layout_height="match_parent"
    android:elevation="8dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/shopangebot_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

    </androidx.recyclerview.widget.RecyclerView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.nambimobile.widgets.efab.ExpandableFabLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        >
        <com.nambimobile.widgets.efab.Overlay
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:overlay_orientation="portrait"

            />
        <com.nambimobile.widgets.efab.ExpandableFab
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:overlay_orientation="portrait"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/shopangebotfloating_action_button"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:contentDescription="Options"
            app:srcCompat="@drawable/ic_menu_24"
            tools:ignore="VectorDrawableCompat"
            />


        <com.nambimobile.widgets.efab.FabOption
            android:layout_width="wrap_content"
            app:label_text="Filter"
            android:id="@+id/shopangebot_filter"
            app:srcCompat="@drawable/ic_filter_alt_24"
            android:layout_height="wrap_content"
            tools:ignore="VectorDrawableCompat" />
    </com.nambimobile.widgets.efab.ExpandableFabLayout>
</RelativeLayout>