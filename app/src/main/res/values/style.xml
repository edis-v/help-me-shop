<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- -->
    //AppTitle
    <style name="TextAppearance.Shrine.Title" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    //ImageView
    <!--  rundung des Profielbild   -->
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">80%</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    //TextInput
    <style name="Widget.ShopForMe.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/textColorPrimary</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
    </style>

    //MaterialCards
    <style name="Widget.ShopForMe.MaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="backgroundColor">@color/white</item>


    </style>

    //Text Edit
    <style name="Widget.ShopForMe.EditText" parent="">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    //Button
    <!-- Normale button zu klicken z.b einloggen -->
    <style name="Widget.ShopForMe.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="elevation">12dp</item>
    </style>

    <style name="Widget.ShopForMe.Button.big" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">330dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:textSize">20sp</item>
        <item name="iconSize">40dp</item>
        <item name="iconTint">@color/white</item>
        <item name="android:shadowColor">@color/black</item>

    </style>

    //divider
    <style name="divider" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="background">@color/divivder</item>
    </style>


    //Text Apperarance


    <style name="TextAppearance.ShopForMe.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/roboto</item>
